<!--suppress XmlUnboundNsPrefix -->
<configuration debug="false" scan="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %thread %-5level|%logger{30} %M - %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/wikipedia_server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/wikipedia_server.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd-HH:mm:ss.SSS} [%marker] %-5level %logger{0} - %msg %n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE"/>
    </root>

    <logger name="org.lambda3.data.wikipedia" level="DEBUG" additivity="true">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.apache" level="WARN" additivity="true"/>
    <logger name="org.eclipse" level="WARN" additivity="true"/>
    <logger name="io.netty" level="WARN" additivity="true"/>

</configuration>
